{
    "name": "wearesho-team/yii2-recaptcha-v3",
    "description": "reCAPTCHA v3 Yii2 Integration",
    "type": "library",
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "wearesho-team/recaptcha-v3": "^0.2.0",
        "yiisoft/yii2": "^2.0.15"
    },
    "require-dev": {
        "ext-json": "*",
        "brainmaestro/composer-git-hooks": "^2.6",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Alexander Letnikow",
            "email": "reclamme@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "process-timeout": 1800,
        "sort-packages": true,
        "platform": {
            "php": "7.1"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "cover": "phpunit --coverage-clover=coverage.xml",
        "test": "phpunit",
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer lint",
                "composer test"
            ],
            "post-merge": "composer update --lock"
        }
    },
    "autoload": {
        "psr-4": {
            "Wearesho\\ReCaptcha\\V3\\Yii2\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wearesho\\ReCaptcha\\V3\\Yii2\\Tests\\": "tests/"
        }
    }
}
